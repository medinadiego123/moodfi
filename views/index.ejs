<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Moodfi</title>
    <link rel="stylesheet" href="/style.css">
    <style>
        body {
            background-color: #141414;
            color: white;
            font-family: Arial, sans-serif;
            text-align: center;
            margin: 0;
            padding: 20px;
        }
        .container {
            max-width: 800px;
            margin: auto;
        }
        h1 {
            font-size: 2em;
            margin-bottom: 20px;
        }
        .bottom-buttons {
            position: fixed;
            bottom: 20px;
            left: 50%;
            transform: translateX(-50%);
            display: flex;
            gap: 15px;
        }
        button {
            background-color: rgb(20, 20, 20);
            color: white;
            border: 2px solid white;
            padding: 12px 24px;
            font-size: 1em;
            cursor: pointer;
            transition: all 0.3s ease-in-out;
        }
        button:hover {
            background-color: white;
            color: black;
            border-color: black;
        }
    </style>
</head>
<body>
    <main>
        <div class="container">
            <h1>Choose Your Mood</h1>
            <button class="happy" onclick="generatePlaylist('happy')">Happy</button>
            <button class="sad" onclick="generatePlaylist('sad')">Sad</button>
            <button class="chill" onclick="generatePlaylist('chill')">Chill</button>
            <button class="energetic" onclick="generatePlaylist('energetic')">Energetic</button>
            <button class="angry" onclick="generatePlaylist('angry')">Angry</button>
        </div>

        <!-- Spotify Player (Only Visible After Playlist is Generated) -->
        <% if (typeof playlistId !== 'undefined' && playlistId) { %>
            <iframe style="border-radius:12px" 
                src="https://open.spotify.com/embed/playlist/<%= playlistId %>?utm_source=generator&theme=0"
                width="100%" 
                height="380" 
                frameborder="0" 
                allowfullscreen="" 
                allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture">
            </iframe>
        <% } %>
    </main>

    <!-- Show Logout Button Only If a Playlist Exists -->
    <% if (typeof playlistId !== 'undefined' && playlistId) { %>
        <div class="bottom-buttons">
            <button class="privacy" onclick="window.location.href='/privacy'">Privacy Policy</button>
            <button class="terms" onclick="window.location.href='/terms'">Terms of Service</button>
            <button class="logout" onclick="window.location.href='/logout'">Logout</button>
        </div>
    <% } else { %>
        <div class="bottom-buttons">
            <button class="privacy" onclick="window.location.href='/privacy'">Privacy Policy</button>
            <button class="terms" onclick="window.location.href='/terms'">Terms of Service</button>
        </div>
    <% } %>

    <script>
        function generatePlaylist(mood) {
            window.location.href = `/login?mood=${mood}`;
        }
    </script>
</body>
</html>
